<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- SQLite settings -->
        <property name="hibernate.connection.driver_class">org.h2.Driver</property>
        <property name="hibernate.connection.url">jdbc:h2:./vsrm;DB_CLOSE_ON_EXIT=FALSE</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property>

        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>

        <mapping class="pkg.vehicules.Vehicule" />
        <mapping class="pkg.vehicules.Motorcycle" />
        <mapping class="pkg.vehicules.Car" />
        <mapping class="pkg.vehicules.Truck" />

        <mapping class="pkg.users.User" />
        <mapping class="pkg.users.Admin" />
        <mapping class="pkg.users.Customer" />
        <mapping class="pkg.users.StockManager" />
        <mapping class="pkg.users.Seller" />

        <mapping class="pkg.transactions.Sale" />
        <mapping class="pkg.showroom.Showroom" />
    </session-factory>
</hibernate-configuration>